<?xml version="1.0" encoding="UTF-8"?>
<project name="CheckerPlugin" default="javadoc" basedir=".">
	<property name="app.title" value="KariyaSiesta" />
	<property name="javadoc.dir" value="doc" />
	<target name="javadoc" description="Javadoc">
		<delete dir="${javadoc.dir}" />
		<mkdir dir="${javadoc.dir}" />
		<javadoc sourcepath="src" packagenames="*" destdir="${javadoc.dir}"
			author="true" version="true" use="true"
			encoding="UTF-8" charset="UTF-8"
			windowtitle="${app.title}">
			<doctitle>
				<![CDATA[<h1>KariyaSiesta</h1>]]>
			</doctitle>
			<bottom>
				<![CDATA[<i>Copyright (C) 2010 RAISIN. All rights reserved.</i>]]>
			</bottom>
		</javadoc>
	</target>
</project>
